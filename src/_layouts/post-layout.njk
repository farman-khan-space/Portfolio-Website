---
layout: base.njk
---

<article>
    <header class="relative isolate overflow-hidden h-96">
        {% if headerImage %}
            {% image headerImage, title, "100vw", "absolute inset-0 h-full w-full object-cover z-[-2]" %}
        {% endif %}
        <div class="absolute inset-0 bg-black/60 z-[-1]"></div>
        <div class="h-full flex flex-col justify-center items-center text-center px-6">
            <div class="container mx-auto">
                <h1 class="font-heading text-4xl md:text-6xl font-bold text-white tracking-tight drop-shadow-lg">{{ title }}</h1>
                {% if date %}
                {# --- UPDATED THIS LINE --- #}
                <p class="mt-4 text-lg text-white/80 drop-shadow-md">{{ date | readableDate }} â€¢ {{ content | readingTime }}</p>
                {% endif %}
            </div>
        </div>
    </header>

    <section class="bg-background py-16">
        <div class="container mx-auto px-6">
            <div class="prose dark:prose-invert max-w-3xl mx-auto">
                {{ content | safe }}
            </div>
        </div>
    </section>
</article>
