<!DOCTYPE html>
<html lang="en" class="scroll-smooth" data-theme="kyoto-ink">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {# --- SEO Meta Tags --- #}
    {% include "seo.njk" %}

    {# --- Favicons & Theme --- #}
    <link rel="icon" type="image/svg+xml" href="{{ '/img/favicons/favicon.svg' | url }}">
    <link rel="icon" type="image/x-icon" href="{{ '/img/favicons/favicon.ico' | url }}">
    <link rel="apple-touch-icon" href="{{ '/img/favicons/apple-touch-icon.png' | url }}">
    <link rel="manifest" href="{{ '/img/favicons/site.webmanifest' | url }}">
    <meta name="msapplication-TileColor" content="#b91c1c">
    <meta name="theme-color" content="#ffffff">
   
    <script>
        // This script prevents a flash of the wrong theme on page load. It must stay in the <head>.
        (function () {
            if (localStorage.getItem('theme') === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
        })();
    </script>

    {# --- Stylesheets & Fonts --- #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-tomorrow.min.css">
    
    <!-- OPTIMIZED FONT LOADING -->
    <!-- This tells the browser to start fetching the font file ASAP without blocking the page rendering -->
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&family=Inter:wght@400;700&family=Lexend:wght@700&display=swap">
    <!-- This applies the stylesheet once it's loaded. The 'media' trick prevents it from blocking rendering initially. -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&family=Inter:wght@400;700&family=Lexend:wght@700&display=swap" media="print" onload="this.media='all'">
    <!-- Fallback for browsers that don't support JavaScript -->
    <noscript>
      <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&family=Inter:wght@400;700&family=Lexend:wght@700&display=swap">
    </noscript>

    <link rel="stylesheet" href="{{ '/css/style.css' | url }}">

    <!-- ADD THE AOS CSS FILE HERE -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
</head>

<body class="bg-background text-foreground font-sans">
    <div id="progress-bar" class="progress-bar"></div>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    
    {% include "header.njk" %}

    <main id="main-content" class="pt-20">
        {{ content | safe }}
    </main>

    <footer class="bg-accent border-t border-accent/50">
        {% include "footer.njk" %}
    </footer>

    <script src="{{ '/js/main.js' | url }}" defer></script>

    <!-- ADD THE AOS SCRIPT FILE HERE -->
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
</body>
</html>
