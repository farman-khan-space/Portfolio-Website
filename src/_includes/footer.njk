{# Main footer container with background color and padding #}
<div class="bg-accent text-foreground-muted border-t border-primary/[0.1]">
    <div class="container mx-auto px-6 py-12">

        {# Grid container for the columns. It's a single column on mobile and three columns on medium screens and up. #}
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center md:text-left mb-12">

            <!-- Column 1: Site Navigation -->
            <div>
                <h3 class="font-bold text-lg text-foreground mb-4">Quick Links</h3>
                <ul class="space-y-2">
                    <li><a href="{{ '/' | url }}" class="hover:text-primary transition-colors">Home</a></li>
                    <li><a href="{{ '/portfolio/' | url }}" class="hover:text-primary transition-colors">Portfolio</a></li>
                    <li><a href="{{ '/blog/' | url }}" class="hover:text-primary transition-colors">Blog</a></li>
                    <li><a href="{{ '/about/' | url }}" class="hover:text-primary transition-colors">About</a></li>
                    {# --- ADDED THIS LINE --- #}
                    <li><a href="{{ '/contact/' | url }}" class="hover:text-primary transition-colors">Contact</a></li>
                </ul>
            </div>

            <!-- Column 2: Recent Projects -->
            <div>
                <h3 class="font-bold text-lg text-foreground mb-4">Recent Projects</h3>
                <ul class="space-y-2">
                    {# This Nunjucks loop gets the 3 most recent projects from your collection #}
                    {% for project in collections.projects | reverse %}
                    {% if loop.index0 < 3 %}
                    <li>
                        <a href="{{ project.url | url }}" class="hover:text-primary transition-colors">
                            {{ project.data.title }}
                        </a>
                    </li>
                    {% endif %}
                    {% endfor %}
                </ul>
            </div>

            <!-- Column 3: Latest Blog Posts -->
            <div>
                <h3 class="font-bold text-lg text-foreground mb-4">Latest Posts</h3>
                <ul class="space-y-2">
                    {# This Nunjucks loop gets the 3 most recent posts from your collection #}
                    {% for post in collections.posts | reverse %}
                    {% if loop.index0 < 3 %}
                    <li>
                        <a href="{{ post.url | url }}" class="hover:text-primary transition-colors">
                            {{ post.data.title }}
                        </a>
                    </li>
                    {% endif %}
                    {% endfor %}
                </ul>
            </div>

        </div>

        {# Bottom section with social links and copyright, centered #}
        <div class="text-center text-foreground-muted border-t border-primary/[0.1] pt-8">
            <div class="flex justify-center space-x-6 mb-6">
                <a href="https://github.com/farman-khan-space" target="_blank" aria-label="GitHub Profile" class="text-2xl hover:text-primary transition-colors duration-theme"><i class="bi bi-github" aria-hidden="true"></i></a>
                <a href="YOUR_LINKEDIN_URL" target="_blank" aria-label="LinkedIn Profile" class="text-2xl hover:text-primary transition-colors duration-theme"><i class="bi bi-linkedin" aria-hidden="true"></i></a>
                <a href="mailto:farmankhan.data@outlook.com" aria-label="Email Me" class="text-2xl hover:text-primary transition-colors duration-theme"><i class="bi bi-envelope-fill" aria-hidden="true"></i></a>
            </div>
            <p>&copy; {% year %} Farman Khan. All Rights Reserved.</p>
        </div>

    </div>
</div>

