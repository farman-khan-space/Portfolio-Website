<section class="text-center py-24 lg:py-40 px-6 relative isolate overflow-hidden border-b border-primary/10">
    <div class="absolute inset-0 z-[-2]">
        {% image "src/img/data-analysis-bg.png", "Abstract background image of data charts", "100vw", "w-full h-full object-cover" %}
    </div>
    <div class="absolute inset-0 bg-background opacity-90 dark:bg-background dark:opacity-90 z-[-1]"></div>

    <div class="container mx-auto relative z-10" data-aos="fade-in">
        <h1 class="font-heading text-4xl md:text-6xl font-bold text-foreground tracking-tight">Farman Khan</h1>
        <p class="font-heading mt-3 text-xl md:text-2xl font-medium text-primary">Data Analyst & Storyteller</p>
        <p class="mt-6 max-w-2xl mx-auto text-lg text-foreground-muted">Transforming complex data into actionable insights and compelling narratives.</p>
        <div class="mt-10">
            <a href="{{ '/portfolio/' | url }}"
                class="inline-block bg-primary text-white font-bold py-3 px-8 rounded shadow-lg hover:scale-105 transition-transform duration-theme  active:scale-95">
                View My Work
            </a>
        </div>
    </div>
</section>

<section class="bg-background py-20  border-b border-primary/10">
    <div class="container mx-auto px-6">
        <div class="text-center mb-12" data-aos="fade-in">
            <h2 class="font-heading text-3xl font-bold text-foreground">Recent Projects</h2>
            <p class="mt-2 text-lg text-foreground-muted">A selection of my latest data-driven work.</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">

            {# Loop to display the first 3 projects #}
            {% for project in collections.projects %}
            {% if loop.index0 < 3 %}
            <div
                data-aos="fade-up" data-aos-delay="{{ loop.index0 * 100 }}"
                class="card-glass bg-noise backdrop-blur-lg p-2 rounded-lg shadow-lg border border-white/10 dark:border-white/10 hover:shadow-xl hover:scale-[1.02] transition-[transform,box-shadow] duration-300 will-change-transform flex flex-col">
                <div class="overflow-hidden rounded">
                    {% image project.data.featuredImage, project.data.title, "(min-width: 1024px) 30vw, (min-width: 768px) 50vw, 100vw", "w-full h-52 object-cover" %}
                </div>
                <div class="p-6 flex-grow">
                    <h3 class="font-heading text-xl font-bold text-foreground mb-2">{{ project.data.title }}</h3>
                    <p class="text-foreground-muted mb-4">{{ project.data.summary }}</p>

                    {# This block checks if tags exist and then loops through them #}
                    {% if project.data.tags %}
                    <div class="my-4 flex flex-wrap gap-2">
                        {% for tag in project.data.tags %}
                        <span class="text-xs text-foreground-muted border border-foreground-muted/25 rounded-full px-3 py-1">
                            {{ tag }}
                        </span>
                        {% endfor %}
                    </div>
                    {% endif %}
                </div>
                <div class="p-6 pt-0">
                    <a href="{{ project.url | url }}" class="font-medium text-primary hover:font-bold hover:underline">
                        Project Details
                    </a>
                </div>
            </div>
            {% endif %}
            {% endfor %}

        </div>
        <div class="text-center mt-16" data-aos="fade-in">
            <a href="{{ '/portfolio/' | url }}"
                class="inline-block bg-accent text-primary font-medium py-3 px-8 rounded border border-primary hover:bg-primary hover:text-white transition-colors duration-theme">
                View All Projects
            </a>
        </div>
    </div>
</section>

<section class="bg-background py-20">
    <div class="container mx-auto px-6">
        <div class="text-center mb-12" data-aos="fade-in">
            <h2 class="font-heading text-3xl font-bold text-foreground">Latest from the Blog</h2>
            <p class="mt-2 text-lg text-foreground-muted">My recent thoughts on data, analytics, and storytelling.</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">

            {# Loop to display the first 3 posts #}
            {% for post in collections.posts %}
            {% if loop.index0 < 3 %}
            <div
                data-aos="fade-up" data-aos-delay="{{ loop.index0 * 100 }}"
                class="card-glass bg-noise backdrop-blur-lg p-2 rounded-lg shadow-lg border border-white/10 dark:border-white/10 hover:shadow-xl hover:scale-[1.02] transition-[transform,box-shadow] duration-300 will-change-transform flex flex-col">
                <div class="overflow-hidden rounded">
                    {% image post.data.featuredImage, post.data.title, "(min-width: 1024px) 30vw, (min-width: 768px) 50vw, 100vw", "w-full h-52 object-cover" %}
                </div>
                <div class="p-6 flex-grow">
                    <p class="text-sm text-foreground-muted mb-2">{{ post.data.date | readableDate }} â€¢ {{ post.data.readTime }}</p>
                    <h3 class="font-heading text-xl font-bold text-foreground mb-3">{{ post.data.title }}</h3>
                    <p class="text-foreground-muted mb-6">{{ post.data.summary }}</p>

                    {# This block checks if tags exist and then loops through them #}
                    {% if post.data.tags %}
                    <div class="my-4 flex flex-wrap gap-2">
                        {% for tag in post.data.tags %}
                        <span class="text-xs text-foreground-muted border border-foreground-muted/25 rounded-full px-3 py-1">
                            {{ tag }}
                        </span>
                        {% endfor %}
                    </div>
                    {% endif %}
                </div>
                <a href="{{ post.url | url }}" class="font-medium text-primary hover:font-bold hover:underline self-start px-6 pb-6">
                    Read Article
                </a>
            </div>
            {% endif %}
            {% endfor %}

        </div>
        <div class="text-center mt-16" data-aos="fade-in">
            <a href="{{ '/blog/' | url }}"
                class="inline-block bg-accent text-primary font-medium py-3 px-8 rounded border border-primary hover:bg-primary hover:text-white transition-colors duration-theme">
                View All Posts
            </a>
        </div>
    </div>
</section>
