{# --- Main Content Section --- #}
<section class="bg-background py-20 lg:py-24">
    <div class="container mx-auto px-6">

        <div class="grid grid-cols-1 lg:grid-cols-2 lg:gap-12 max-w-6xl mx-auto">

            <!-- Left Column: Contact Info & Links -->
            <div class="mb-12 lg:mb-0" data-aos="fade-right">
                <!-- NEW: Wrapped in card-glass for consistency -->
                <div class="card-glass bg-noise backdrop-blur-lg p-8 rounded-lg shadow-lg border border-white/10 dark:border-white/10 h-full">
                    <h2 class="font-heading text-3xl font-bold text-foreground mb-4">Contact Information</h2>
                    <p class="text-foreground-muted mb-8">
                        I'm always open to discussing new projects, creative ideas, or opportunities to be part of your vision.
                    </p>

                    <div class="space-y-6">
                        {# Email Link #}
                        <a href="mailto:farman.khan@datamakinsense.space" class="flex items-center group">
                            <div class="flex-shrink-0 h-12 w-12 flex items-center justify-center rounded-lg bg-accent border border-primary/10 group-hover:bg-primary/10 transition-colors">
                                <i class="bi bi-envelope-fill text-xl text-primary"></i>
                            </div>
                            <span class="ml-4 text-lg text-foreground-muted group-hover:text-primary transition-colors">farman.khan@datamakinsense.space</span>
                        </a>
                        {# LinkedIn Link #}
                        <a href="https://www.linkedin.com/in/farman-khan-data-analyst/" target="_blank" class="flex items-center group">
                            <div class="flex-shrink-0 h-12 w-12 flex items-center justify-center rounded-lg bg-accent border border-primary/10 group-hover:bg-primary/10 transition-colors">
                                <i class="bi bi-linkedin text-xl text-primary"></i>
                            </div>
                            <span class="ml-4 text-lg text-foreground-muted group-hover:text-primary transition-colors">Connect on LinkedIn</span>
                        </a>
                        {# GitHub Link #}
                        <a href="https://github.com/farman-khan-space" target="_blank" class="flex items-center group">
                            <div class="flex-shrink-0 h-12 w-12 flex items-center justify-center rounded-lg bg-accent border border-primary/10 group-hover:bg-primary/10 transition-colors">
                                <i class="bi bi-github text-xl text-primary"></i>
                            </div>
                            <span class="ml-4 text-lg text-foreground-muted group-hover:text-primary transition-colors">Follow on GitHub</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Right Column: Contact Form -->
            <div data-aos="fade-left" data-aos-delay="200">
                <!-- NEW: Wrapped in card-glass for consistency -->
                <div class="card-glass bg-noise backdrop-blur-lg p-8 rounded-lg shadow-lg border border-white/10 dark:border-white/10">
                    <form name="contact" method="POST" action="/thank-you/" netlify>
                        <div class="space-y-6">
                            <div>
                                <label for="name" class="block text-sm font-bold text-foreground mb-2">Full Name</label>
                                <input type="text" id="name" name="name" required
                                       class="w-full bg-accent border border-primary/20 rounded-md px-4 py-2 text-foreground focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-shadow"
                                       placeholder="e.g., John Doe">
                            </div>
                            <div>
                                <label for="email" class="block text-sm font-bold text-foreground mb-2">Email Address</label>
                                <input type="email" id="email" name="email" required
                                       class="w-full bg-accent border border-primary/20 rounded-md px-4 py-2 text-foreground focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-shadow"
                                       placeholder="e.g., you@example.com">
                            </div>
                            <div>
                                <label for="message" class="block text-sm font-bold text-foreground mb-2">Message</label>
                                <textarea id="message" name="message" rows="5" required
                                          class="w-full bg-accent border border-primary/20 rounded-md px-4 py-2 text-foreground focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-shadow"
                                          placeholder="Tell me a little more about your project or question..."></textarea>
                            </div>
                            <div>
                                <button type="submit"
                                        class="w-full bg-primary text-white font-bold py-3 px-6 rounded-md shadow-lg hover:scale-[1.02] transition-transform duration-theme active:scale-95">
                                    Send Message
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
