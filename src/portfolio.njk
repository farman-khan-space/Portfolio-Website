title: Portfolio
layout: base.njk
permalink: /portfolio/
---
<section class="text-center py-20 lg:py-24 px-6 bg-accent border-b border-primary/[0.05]">
    <div class="container mx-auto" data-aos="fade-in">
        <h1 class="font-heading text-4xl md:text-5xl font-bold text-foreground tracking-tight">My Work</h1>
        <p class="mt-4 max-w-2xl mx-auto text-lg text-foreground-muted">Here is a collection of my projects, showcasing
            my skills in data analysis, visualization, and storytelling.</p>
    </div>
</section>
<section class="bg-background py-20">
    <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
            {# This loop will display ALL projects from your `src/projects` folder #}
            {% for project in collections.projects %}
            <a href="{{ project.url | url }}" 
               data-aos="fade-up" data-aos-delay="{{ loop.index0 * 100 }}"
               class="group block card-glass bg-noise backdrop-blur-lg p-2 rounded-lg shadow-lg border border-white/10 dark:border-white/10 hover:shadow-xl hover:scale-[1.02] transition-[transform,box-shadow] duration-300 will-change-transform">
                
                <div class="relative overflow-hidden rounded">
                    {% image project.data.featuredImage, project.data.title, "(min-width: 1024px) 30vw, (min-width: 768px) 50vw, 100vw", "w-full h-60 object-cover transition-transform duration-500 ease-in-out group-hover:scale-110" %}
                    
                    <!-- Desktop-only hover overlay -->
                    <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity duration-500 ease-in-out hidden md:flex items-center justify-center p-6">
                        <p class="text-white text-center font-semibold">View Project Details</p>
                    </div>
                </div>

                <div class="p-6">
                    <h3 class="font-heading text-xl font-bold text-foreground mb-2 group-hover:text-primary transition-colors">{{ project.data.title }}</h3>
                    <p class="text-foreground-muted text-base mb-4">{{ project.data.summary }}</p>
                    
                    {% if project.data.tags %}
                    <div class="mt-4 flex flex-wrap gap-2">
                        {% for tag in project.data.tags %}
                        <span class="text-xs text-foreground-muted border border-foreground-muted/25 rounded-full px-3 py-1">
                            {{ tag }}
                        </span>
                        {% endfor %}
                    </div>
                    {% endif %}
                </div>
            </a>
            {% endfor %}

        </div>
    </div>
</section>
