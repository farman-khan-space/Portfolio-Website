<section class="text-center py-24 lg:py-32 px-6 bg-gradient-to-b from-primary-50 to-neutral-50 dark:from-neutral-900 dark:to-neutral-950">
    <div class="container mx-auto">
        <h1 class="font-heading text-4xl md:text-6xl font-bold text-neutral-900 dark:text-white tracking-tight">My Work</h1>
        <p class="mt-6 max-w-2xl mx-auto text-lg text-neutral-600 dark:text-neutral-400">A collection of projects where data is transformed into meaningful stories and strategic insights.</p>
    </div>
</section>

<section class="bg-white dark:bg-neutral-950 py-20">
    <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
          
  
            {% for project in collections.projects %}
            <a href="{{ project.url | url }}" class="block bg-neutral-50 dark:bg-neutral-800/50 p-2 rounded-xl shadow-md border border-neutral-200 dark:border-neutral-800 hover:shadow-xl hover:scale-[1.02] transition-all group flex flex-col">
                <div class="overflow-hidden rounded-lg">
                    <img src="{{ project.data.featuredImage |
url }}" alt="{{ project.data.title }}" class="w-full h-52 object-cover group-hover:scale-105 transition-transform duration-300">
                </div>
                <div class="p-6 flex-grow">
                    <h3 class="font-heading text-xl font-bold text-neutral-900 dark:text-white mb-2">{{ project.data.title }}</h3>
                    <p class="text-neutral-600 dark:text-neutral-400 mb-4">{{ project.data.summary }}</p>
   
             </div>
                <div class="p-6 pt-0">
                  <span class="font-medium text-primary-600 dark:text-primary-500 group-hover:underline">View Project â†’</span>
                </div>
            </a>
            {% else %}
   
             <p class="md:col-span-2 lg:col-span-3 text-center">No projects have been added yet. Please check back soon!</p>
            {% endfor %}
            
        </div>
    </div>
</section>