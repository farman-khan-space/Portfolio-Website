title: Portfolio
layout: base.njk
permalink: /portfolio/
---
<section class="text-center py-20 lg:py-24 px-6 bg-accent border-b border-primary/[0.05]">
    <div class="container mx-auto">
        <h1 class="font-heading text-4xl md:text-5xl font-bold text-foreground tracking-tight">My Work</h1>
        <p class="mt-4 max-w-2xl mx-auto text-lg text-foreground-muted">Here is a collection of my projects, showcasing
            my skills in data analysis, visualization, and storytelling.</p>
    </div>
</section>
<section class="bg-background py-20">
    <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
            {# This loop will display ALL projects from your `src/projects` folder #}
            {% for project in collections.projects %}

            <div class="block bg-accent p-2 rounded-lg shadow-md border border-transparent hover:shadow-xl hover:scale-[1.02] transition-[transform,box-shadow] duration-300 will-change-transform flex flex-col">
                <div class="overflow-hidden rounded">
                    <img src="{{ project.data.featuredImage | url }}" alt="{{ project.data.title }}"
                        class="w-full h-52 object-cover">
                </div>
                <div class="p-6 flex-grow">
                    <h3 class="font-heading text-xl font-bold text-foreground mb-2">{{ project.data.title }}</h3>
                    <p class="text-foreground-muted mb-4">{{ project.data.summary }}</p>
                </div>
                <div class="p-6 pt-0">
                    <a href="{{ project.url | url }}" class="font-medium text-primary hover:font-bold hover:underline">
                        Project Details
                    </a>
                </div>
            </div>

            {% endfor %}

        </div>
    </div>
</section>