layout: base.njk
permalink: /portfolio/
---
<section class="text-center py-20 lg:py-24 px-6 bg-accent border-b border-primary/[0.05]">
    <div class="container mx-auto" data-aos="fade-in">
        <h1 class="font-heading text-4xl md:text-5xl font-bold text-foreground tracking-tight">My Work</h1>
        <p class="mt-4 max-w-2xl mx-auto text-lg text-foreground-muted">Here is a collection of my projects, showcasing
            my skills in data analysis, visualization, and storytelling.</p>
    </div>
</section>
<section class="bg-background py-20">
    <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
            {# This loop will display ALL projects from your `src/projects` folder #}
            {% for project in collections.projects %}

            <div class="flip-card group" data-aos="fade-up" data-aos-delay="{{ loop.index0 * 100 }}">
                <div class="flip-card-inner">
                    <!-- FRONT OF CARD -->
                    <div class="flip-card-front">
                         <div class="card-glass bg-noise backdrop-blur-lg p-2 rounded-lg shadow-lg border border-white/10 dark:border-white/10 h-full">
                            <div class="overflow-hidden rounded h-full">
                                {% image project.data.featuredImage, project.data.title, "(min-width: 1024px) 30vw, (min-width: 768px) 50vw, 100vw", "w-full h-full object-cover" %}
                            </div>
                        </div>
                    </div>
                    <!-- BACK OF CARD -->
                    <div class="flip-card-back">
                        <div class="card-glass bg-noise backdrop-blur-lg p-2 rounded-lg shadow-lg border border-white/10 dark:border-white/10 h-full flex flex-col">
                            <div class="p-6 flex-grow flex flex-col justify-center">
                                <h3 class="font-heading text-xl font-bold text-foreground mb-2">{{ project.data.title }}</h3>
                                <p class="text-foreground-muted mb-4">{{ project.data.summary }}</p>

                                {% if project.data.tags %}
                                <div class="my-4 flex flex-wrap gap-2 justify-center">
                                    {% for tag in project.data.tags %}
                                    <span class="text-xs text-foreground-muted border border-foreground-muted/25 rounded-full px-3 py-1">
                                        {{ tag }}
                                    </span>
                                    {% endfor %}
                                </div>
                                {% endif %}
                            </div>
                            <div class="p-6 pt-0">
                                <a href="{{ project.url | url }}" class="font-medium text-primary hover:font-bold hover:underline">
                                    Project Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}

        </div>
    </div>
</section>

