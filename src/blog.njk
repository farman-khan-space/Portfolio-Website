title: Blog
layout: base.njk
permalink: /blog/
---

<section class="text-center py-24 lg:py-32 px-6 bg-accent border-b border-primary/10">
    <div class="container mx-auto" data-aos="fade-in">
        <h1 class="font-heading text-4xl md:text-6xl font-bold text-foreground tracking-tight">Data & Insights</h1>
        <p class="mt-6 max-w-2xl mx-auto text-lg text-foreground-muted">Writing about data analysis, visualization techniques, and the stories hidden within the numbers.</p>
    </div>
</section>

<section class="bg-background py-20">
    <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">

            {% for post in collections.posts %}
            <a href="{{ post.url | url }}" 
               data-aos="fade-up" data-aos-delay="{{ loop.index0 * 100 }}"
               class="group block card-glass bg-noise backdrop-blur-lg p-2 rounded-lg shadow-lg border border-white/10 dark:border-white/10 hover:shadow-xl hover:scale-[1.02] transition-[transform,box-shadow] duration-300 will-change-transform">
                
                <div class="relative overflow-hidden rounded">
                    {% image post.data.featuredImage, post.data.title, "(min-width: 1024px) 30vw, (min-width: 768px) 50vw, 100vw", "w-full h-60 object-cover transition-transform duration-500 ease-in-out group-hover:scale-110" %}
                    
                    <!-- Desktop-only hover overlay -->
                    <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity duration-500 ease-in-out hidden md:flex items-center justify-center p-6">
                        <p class="text-white text-center font-semibold">Read Article</p>
                    </div>
                </div>

                <div class="p-6">
                    <p class="text-sm text-foreground-muted mb-2">{{ post.data.date | readableDate }} â€¢ {{ post.data.readTime }}</p>
                    <h3 class="font-heading text-xl font-bold text-foreground mb-3 group-hover:text-primary transition-colors">{{ post.data.title }}</h3>
                    <p class="text-foreground-muted text-base mb-4">{{ post.data.summary }}</p>
                    
                    {% if post.data.tags %}
                    <div class="mt-4 flex flex-wrap gap-2">
                        {% for tag in post.data.tags %}
                        <span class="text-xs text-foreground-muted border border-foreground-muted/25 rounded-full px-3 py-1">
                            {{ tag }}
                        </span>
                        {% endfor %}
                    </div>
                    {% endif %}
                </div>
            </a>
            {% else %}
            <p class="md:col-span-2 lg:col-span-3 text-center text-foreground-muted">No posts have been written yet. Please check back soon!</p>
            {% endfor %}

        </div>
    </div>
</section>
